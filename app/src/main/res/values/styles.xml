<resources>
    <!-- Splash screen to use -->
    <style name="AppSplash" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowBackground">@drawable/splash_layout</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppInputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="AppEditText">
        <item name="android:maxLength">2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:digits">0123456789</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:text">3</item>
    </style>
</resources>
