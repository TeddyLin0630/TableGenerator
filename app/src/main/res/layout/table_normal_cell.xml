<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgCellBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFB7DD"
        tools:layout_height="60dp" />

    <View
        android:id="@+id/divideTop"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignBottom="@id/imgCellBg"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/textRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"
        android:text="@string/text_cell_random"
        tools:text="@string/text_cell_random" />

    <View
        android:id="@+id/divideStart"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_alignParentStart="true"/>

    <View
        android:id="@+id/divideEnd"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>